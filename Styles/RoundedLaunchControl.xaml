                    <Button BorderBrush="White"
                            Foreground="{x:Null}"
                            RenderTransformOrigin="0.5,0.5"
                            d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin">
                        <Button.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform X="-0.5" Y="-0.5"/>
                            </TransformGroup>
                        </Button.RenderTransform>
                        <Button.Background>
                            <RadialGradientBrush RadiusY="0.494" RadiusX="0.522" Center="0.521,0.5" GradientOrigin="0.521,0.5">
                                <GradientStop Color="#FF224EE2" Offset="0.075"/>
                                <GradientStop Color="#CCFFFFFF" Offset="0.964"/>
                                <GradientStop Color="#F06180EA" Offset="0.576"/>
                                <GradientStop Color="#E1A2B4F2" Offset="0.773"/>
                                <GradientStop Color="#D8C8D3F7" Offset="0.903"/>
                            </RadialGradientBrush>
                        </Button.Background>
                        <Button.Clip>
                            <EllipseGeometry Center="20, 17"
                                             RadiusX="19"
                                             RadiusY="16" />
                        </Button.Clip>
                        <ContentControl Height="12" Width="12" Margin="4,0,0,0" Content="{DynamicResource PlayIcon}" />
                    </Button>
                </Grid>
                <Grid x:Name="GridBottomButton"
                      Grid.Row="4"
                      Grid.RowSpan="3"
                      Grid.Column="1"
                      Grid.ColumnSpan="4"
                      RenderTransformOrigin="0.5,0.5"
                      d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin">
