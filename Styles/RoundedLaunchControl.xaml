                          Stretch="Uniform"
                          Stroke="Black"
                          StrokeThickness="0.2" />

                    <Button BorderBrush="{x:Null}"
                            Clip="{Binding Data,
                                           Source={StaticResource LauncherLeftButtonShape}}"
                            RenderTransformOrigin="0.5,0.5"
                            SnapsToDevicePixels="True" Background="{DynamicResource LancherLeftButtonBackgroundBrush}">
                        <Button.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform />
                                <SkewTransform />
                                <RotateTransform />
                                <TranslateTransform Y="-1.5" />
                            </TransformGroup>
                        </Button.RenderTransform>
                    </Button>
                </Grid>
                <Grid x:Name="GridCenterButton"
