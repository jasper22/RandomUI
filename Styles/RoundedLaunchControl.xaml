                            HorizontalContentAlignment="Left"
                            BorderBrush="White"
                            Clip="{Binding Data,
                                           Source={StaticResource LauncherTopButtonShape}}"
                            RenderTransformOrigin="0.5,0.5"
                            SnapsToDevicePixels="True" Background="{DynamicResource LauncherTopButtonBackgroundBrush}">
                        <Button.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="1.04" />
                                <SkewTransform />
                                <RotateTransform />
                                <TranslateTransform />
                            </TransformGroup>
